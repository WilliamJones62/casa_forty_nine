<div class="text-center"> 
  <h1> <%= @property.name %> </h1>
  <h2> <%= @property.headline %> </h2>
</div>

<div class="flex">
  <div>Rating = <%= @property.average_rating %><span style='font-size:15px;'>&#9733;</span> Reviews = <%= @property.reviews_count %> | <%= @property.city %>, <%= @property.state %>, <%= @property.country %> </div>
</div>

<%= image_tag "living room 2", class: "img-fluid" %>
<%= link_to 'See All Images', properties_images_path, class: "btn btn-primary" %>  

<div class="d-flex p-2">
  <div>
    <p> <%= @property.description %> </p>
    <p> <%= @property.address %> </p>
    <p> <%= humanized_money_with_symbol(@property.price)%> </p>
    <% if @property.average_rating %>
      <p> <%= @property.average_rating %> </p>
    <% end %>
    <p> <%= @property.available_dates.first %> </p>
  </div>
</div>
