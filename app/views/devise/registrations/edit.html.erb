<h2>My Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <br>
  <table class="table">
    <thead>
      <tr>
        <th> <%= f.label :email, class: "control-label" %></th>
        <th> <%= f.label :first_name, class: "control-label" %></th>
        <th> <%= f.label :last_name, class: "control-label" %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td> <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
        <td> <%= f.text_field :first_name, class: "form-control" %>
        <td> <%= f.text_field :last_name, class: "form-control" %>
      </tr>
    </tbody>
  </table>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th> <%= f.label :city, class: "control-label" %></th>
        <th> <%= f.label :state, class: "control-label" %></th>
        <th> <%= f.label :country, class: "control-label" %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td> <%= f.text_field :city, class: "form-control" %>
        <td> <%= f.text_field :state, class: "form-control" %>
        <td> <%= f.text_field :country, class: "form-control" %>
      </tr>
    </tbody>
  </table>
  <br>
  <h4>Change Password?</h4>
  <table class="table">
    <thead>
      <tr>
        <th> <%= f.label :password %> <i>(leave blank if you don't want to change it)</i></th>
        <th> <%= f.label :password_confirmation %> <i>(leave blank if you don't want to change it)</i></th>
        <th> <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td> <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
        </td>
        <td> <%= f.password_field :password_confirmation, autocomplete: "new-password" %> </td>
        <td> <%= f.password_field :current_password, autocomplete: "current-password" %> </td>
      </tr>
    </tbody>
  </table>
  <br>
  <h4>Photo</h4>
  <% if !current_user.image.blank? %>
  <h5>Current Photo</h5>
  <%= image_tag current_user.image, class: "erich_image rounded-circle p-2" %>
  <br>
  <p>Choose a photo below to change your photo</p>
  <% else %>
  <h5>Add a Photo</h5>
  <p>Choose a photo below to add your photo</p>
  <% end %>

  <%= f.file_field :image, accept: 'image/png,image/gif,image/jpeg' %>
  <br>
  <br>
  <div class="actions">
    <%= f.submit "Update You Profile", :class => 'btn btn-secondary' %>
  </div>
<% end %>
<br>
<h4>Cancel account?</h4>

<div><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>